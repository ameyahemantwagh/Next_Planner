# Project environment variables
# Database (Postgres)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=next_planner
DATABASE_URL=postgresql://postgres:postgres@db:9001/next_planner
POSTGRES_PORT=9001

# Redis
REDIS_URL=redis://redis:9002/0
REDIS_PORT=9002

# App environment
ENV=development

# JWT / token secret (replace with a secure value in production)
JWT_SECRET=please_change_this_to_a_strong_random_value

# Token expiry settings (minutes / days)
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# Frontend
FRONTEND_URL=http://localhost:9005
FRONTEND_PORT=9005
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=100

# Backend
BACKEND_URL=http://localhost:9003
BACKEND_PORT=9003
PYTHONUNBUFFERED=1

# Email / SMTP (set to real values in production)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=no-reply@example.com

# Optional cookie/domain settings
COOKIE_DOMAIN=localhost
